{
  "name": "botarhythm-userhistory",
  "version": "1.0.0",
  "description": "Botarhythm Coffee Roaster LINE Mini App for customer history management",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run build:server && node dist/server.js",
    "dev:client": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "node test-server.js",
    "test:server": "node test-server.js",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "check-integrity": "npm run build:server && node dist/scripts/check-db-integrity.js",
    "fix-integrity": "npm run build:server && node dist/scripts/auto-fix-integrity.js",
    "deploy": "railway up",
    "deploy:staging": "railway up --environment staging",
    "logs": "railway logs",
    "logs:follow": "railway logs --follow",
    "status": "railway status",
    "railway:deploy": "npm run build:server && node dist/scripts/railway-mcp.js deploy",
    "railway:deploy:staging": "npm run build:server && node dist/scripts/railway-mcp.js deploy staging",
    "railway:logs": "npm run build:server && node dist/scripts/railway-mcp.js logs",
    "railway:logs:follow": "npm run build:server && node dist/scripts/railway-mcp.js logs --follow",
    "railway:status": "npm run build:server && node dist/scripts/railway-mcp.js status",
    "railway:health": "npm run build:server && node dist/scripts/railway-mcp.js health",
    "railway:autofix": "npm run build:server && node dist/scripts/railway-mcp.js autofix",
    "railway:update-env": "npm run build:server && node dist/scripts/railway-mcp.js update-env"
  },
  "keywords": [
    "line",
    "miniapp",
    "coffee",
    "roaster",
    "notion",
    "railway"
  ],
  "author": "Botarhythm Coffee Roaster",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@line/liff": "^2.22.3",
    "@notionhq/client": "^2.2.14",
    "@railway/cli": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^5.0.10"
  }
}
